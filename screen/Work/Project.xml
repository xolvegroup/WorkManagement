<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="" default-menu-title="Projects - Screen XML Version"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd">

    <transition name="createProject"><service-call name="wm.ProjectServices.create#Project"/>
        <default-response url="."/></transition>

    <actions>
        <service-call name="wm.ProjectServices.get#Projects" out-map="context" in-map="context"/>
    </actions>

    <widgets>
        <container-dialog id="NewProjectContainer" button-text="New Project">
            <form-single name="NewProject" transition="createProject">
                <field name="workEffortName"><default-field title="Project Name"><text-line/></default-field></field>
                <field name="description"><default-field title="Description"><text-area editor-type="ckhtml" rows="10" cols="60"/></default-field> </field>
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
            </form-single>
        </container-dialog>
        <form-list name="ProjectList" list="projectList">
            <field name="workEffortId"><default-field title="Project ID"><display/></default-field></field>
            <field name="workEffortName"><default-field title="Project Name"><display/></default-field></field>
        </form-list>
    </widgets>
</screen>
