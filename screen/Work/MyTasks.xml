<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="" default-menu-include="false"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd">

    <!-- This parameter causes the left side to only show the task that was updated -->
    <parameter name="workEffortId"/>
    <transition name="getComments" read-only="true">
        <actions>
            <entity-find entity-name="mantle.work.effort.WorkEffortCommEventDetail" list="commEventDetailList">
                <econdition field-name="workEffortId"/><order-by field-name="entryDate"/>
            </entity-find>
            <script>ec.web.sendJsonResponse(commEventDetailList)</script>
        </actions>
        <default-response type="none"/>
    </transition>
    <transition name="createTask">
        <!-- TODO: Change this to default in the dialog but allow user to change assign to -->
        <service-call name="mantle.work.TaskServices.create#SimpleTask" in-map="context + [assignToPartyId:ec.user.userAccount.partyId]"/>
        <default-response url="."/>
    </transition>
    <transition name="taskDetail"><default-response url="TaskDetail"/></transition>

    <actions>
        <entity-find entity-name="mantle.work.effort.WorkEffortAndParty" list="myTaskList">
            <search-form-inputs default-order-by="priority"/><date-filter/>
            <econdition field-name="workEffortTypeEnumId" value="WetTask"/>
            <econdition field-name="partyId" from="ec.user.userAccount.partyId"/>
            <econdition field-name="statusId" operator="not-in" value="WeClosed,WeCancelled" ignore="statusId"/>
            <econdition field-name="partyStatusId" operator="in" value="WeptAssigned,WeptArrived"/>
        </entity-find>
    </actions>

    <widgets>
        <!--<label text="Selected Task ${selectedWorkEffortId}"/>-->
        <container-row>
            <row-col lg="6">
                <container-box><box-header title="My Tasks"/><box-toolbar>
                    <container-dialog id="NewTaskContainer" button-text="New Task">
                        <form-single name="NewTaskForm" transition="createTask">
                            <field name="workEffortName"><default-field title="Task Name"><text-line/></default-field></field>
                            <field name="estimatedCompletionDate">
                                <default-field title="Due Date"><date-time type="date" format="yyyy-MM-dd"/></default-field>
                            </field>
                            <field name="description"><default-field title="Description"><text-area rows="10" cols="60"/></default-field></field>
                            <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                        </form-single>
                    </container-dialog></box-toolbar>
                    <box-body height="75vh">
                        <form-list skip-header="false" name="MyTasks" list="myTaskList" skip-form="true" header-dialog="true" saved-finds="true" paginate="true">

                            <!--
                            <field name="workEffortName"><header-field title="Name" show-order-by="true"><text-find size="20" hide-options="true"/></header-field>
                                <default-field><link dynamic-load-id="TaskDetailContainer" text="${workEffortName}" url="taskDetail"
                                      id="${workEffortId}" link-type="anchor"
                                      parameter-map="[selectedWorkEffortId:workEffortId]"/></default-field></field>
                                      -->
                            <field name="workEffortName"><header-field title="Name" show-order-by="true"><text-find size="20" hide-options="true"/></header-field>
                            <default-field><link dynamic-load-id="TaskDetailContainer" text="${workEffortName}" url="taskDetail"
                                                 id="${workEffortId}" link-type="anchor">
                                <parameter name="workEffortId" />
                            </link></default-field></field>
                            <field name="statusId"><default-field title="Status">
                                <display-entity entity-name="moqui.basic.StatusItem"/></default-field></field>
                            <field name="estimatedCompletionDate"><header-field title="Due" show-order-by="true"><date-period/></header-field>
                                <default-field><display format="yyyy-MM-dd"/></default-field></field>
                        </form-list>
                    </box-body>
                </container-box>
            </row-col>
            <row-col lg="6">
                <dynamic-container id="TaskDetailContainer" transition="taskDetail"><parameter name="workEffortId"/>
                </dynamic-container>
            </row-col>
        </container-row>
    </widgets>
</screen>
