<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="" default-menu-title="Tasks - Screen XML Version"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd">

    <transition name="createTask">
        <!-- TODO: Change this to default in the dialog but allow user to change assign to -->
        <service-call name="wm.TaskServices.create#Task" in-map="context"/>
        <default-response url="."/>
    </transition>
    <transition name="taskDetail"><default-response url="TaskDetail"/></transition>
    <transition-include name="getUserProjectList" location="component://SimpleScreens/template/work/WorkTransitions.xml"/>

    <actions>
        <service-call name="wm.TaskServices.get#Tasks" in-map="context" out-map="context"/>
        <!--
        <entity-find entity-name="mantle.work.effort.WorkEffortAndParty" list="taskList" distinct="true">
            <search-form-inputs default-order-by="estimatedCompletionDate">
            </search-form-inputs>
            <date-filter/>
            <econdition field-name="workEffortTypeEnumId" value="WetTask"/>
            <econdition field-name="statusId" operator="not-in" value="WeClosed,WeCancelled"/>
            <select-field field-name="rootWorkEffortId,workEffortId,workEffortName,estimatedCompletionDate"/>
        </entity-find>
        -->
    </actions>

    <widgets>
        <!--<label text="Selected Task ${selectedWorkEffortId}"/>-->
        <container-row>
            <row-col lg="6">
                <container-box><box-header/><box-toolbar>
                    <container-dialog id="NewTaskContainer" button-text="New Task">
                        <form-single name="NewTaskForm" transition="createTask">
                            <field name="workEffortName"><default-field title="Task Name"><text-line/></default-field></field>
                            <field name="rootWorkEffortId"><default-field title="Project"><drop-down allow-empty="true">
                                <dynamic-options transition="getUserProjectList" server-search="true" min-length="0"/></drop-down></default-field></field>
                            <field name="assignToPartyId"><default-field title="Assigned To">
                                <drop-down allow-empty="true"><entity-options text="PartyNameOnlyTemplate">
                                    <entity-find entity-name="mantle.party.PersonWithUserAccount">
                                        <order-by field-name="lastName"/>
                                    </entity-find>
                                </entity-options></drop-down></default-field>
                            </field>
                            <field name="estimatedCompletionDate">
                                <default-field title="Due Date"><date-time type="date" format="yyyy-MM-dd"/></default-field>
                            </field>
                            <field name="description"><default-field title="Description"><text-area editor-type="ckhtml" rows="10" cols="60"/></default-field></field>
                            <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                        </form-single>
                    </container-dialog></box-toolbar>
                    <box-body height="75vh">
                        <form-list skip-header="false" name="TaskList" list="taskList" skip-form="true" header-dialog="true" saved-finds="true" paginate="true">

                            <!--
                            <field name="workEffortName"><header-field title="Name" show-order-by="true"><text-find size="20" hide-options="true"/></header-field>
                                <default-field><link dynamic-load-id="TaskDetailContainer" text="${workEffortName}" url="taskDetail"
                                      id="${workEffortId}" link-type="anchor"
                                      parameter-map="[selectedWorkEffortId:workEffortId]"/></default-field></field>
                                      -->
                            <field name="partyId"><header-field title="User">
                                <drop-down allow-empty="true"><entity-options text="PartyNameOnlyTemplate">
                                    <entity-find entity-name="mantle.party.PersonWithUserAccount">
                                        <order-by field-name="lastName"/>
                                    </entity-find>
                                </entity-options></drop-down>
                            </header-field></field>
                            <field name="roleTypeId"><header-field title="Role">
                                <drop-down allow-empty="true">
                                    <option key="Assignee" text="Assignee"/>
                                    <option key="Collaborator" text="Collaborator"/>
                                </drop-down>
                            </header-field></field>
                            <field name="workEffortName"><header-field title="Task" show-order-by="true"><text-find/></header-field>
                            <default-field><link dynamic-load-id="TaskDetailContainer" text="WorkEffortNameTemplate" url="taskDetail"
                                                 id="${workEffortId}" link-type="anchor">
                                <parameter name="workEffortId" />
                            </link></default-field></field>
                            <field name="assignToPartyId">
                                <default-field><display/></default-field>
                            </field>
                            <!--
                            <field name="statusId"><default-field title="Status">
                                <display-entity entity-name="moqui.basic.StatusItem"/></default-field></field>
                            <field name="priority"><header-field title="Priority" show-order-by="true"/><default-field/></field>
                            -->
                            <field name="rootWorkEffortId"><header-field title="Project">
                                <drop-down allow-empty="true">
                                    <dynamic-options transition="getUserProjectList" server-search="true" min-length="0"/></drop-down>
                            </header-field><default-field><display-entity entity-name="mantle.work.effort.WorkEffort" text="WorkEffortNameTemplate"/>
                            </default-field></field>
                            <field name="estimatedCompletionDate"><header-field title="Due" show-order-by="true"><date-find type="date"/></header-field>
                                <default-field><display format="yyyy-MM-dd"/></default-field></field>
                            <field name="submitButton"><header-field title="Find"><submit/></header-field></field>
                        </form-list>
                    </box-body>
                </container-box>
            </row-col>
            <row-col lg="6">
                <dynamic-container id="TaskDetailContainer" transition="taskDetail"><parameter name="workEffortId"/>
                </dynamic-container>
            </row-col>
        </container-row>
    </widgets>
</screen>
