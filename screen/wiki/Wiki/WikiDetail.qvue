                          <q-item-label caption class="q-pt-xs">
                          <span @click="showDiffBetweenVersions(wiki_page_history[index+1].versionName, item.versionName)" class="cursor-pointer text-blue q-pr-xs" v-if="index !== (wiki_page_history.length-1)">Diff Prev</span>
                          <span v-if="!(index === (wiki_page_history.length-1) || index === 0)">|</span>
                          <span @click="showDiffBetweenVersions(item.versionName, version)" class="cursor-pointer text-blue" :class="index !== (wiki_page_history.length-1)? 'q-pl-xs' : ''" v-if="index !== 0">Diff Cur</span>
