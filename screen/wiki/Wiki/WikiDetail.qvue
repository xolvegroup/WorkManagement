</template>
<script>
module.exports = {
    data: function () {
        return {
            show_add_comment: false,
            compare_model: false,
            versionNameLhs: "",
            versionNameRhs: "",
            new_page_name: "",
            new_page_seq: "",
            tree_nodes_selected: null,
            space_tree_data: [],
            tree_master_list: [],
            wiki_page_info: {},
            wiki_page_history: null,
            wiki_page_comments: [],
            is_delete_comment:false,
            obj_delete_comment:{},
            is_page_present: false,
            page_detail: {},
            version: null,
            published_version: null,
            page_path: null,
            show_edit_model: false,
            show_add_model: false,
            obj_edit:{},
            show_add_model_partial:false,
            add_wiki_type:"",
            delete_page: false,
            is_children_present: false,
            wiki_type_options_all: [{'label':'md','value':'md'},{'label':'html','value':'html'}],
            wiki_type_options: [{'label':'md','value':'md'},{'label':'html','value':'html'}],
            obj_edit_comment:{}
        }
    },
    methods: {
        getInitials(name) {
            if (name) {
                let name_words = name.split(" ").slice(0, 2);
                final_initials = "";
                name_words.forEach(function(item){
                    final_initials += item[0];
                });
                return final_initials.toUpperCase();
            }
        },
        deleteComment() {
            var self = this;
            const params = new Proxy(new URLSearchParams(window.location.search), {
              get: (searchParams, prop) => searchParams.get(prop),
            });
            if (params.wikiSpaceId) {
                var allParams = $.extend({ wikiPageId: self.wiki_page_info.wikiPageId,
                 communicationEventId:self.obj_delete_comment.communicationEventId,moquiSessionToken:$("#confMoquiSessionToken").val()}, {});
                $.ajax({ type:'POST', dataType:'json', url: "/rest/s1/wm/deleteWikiPageComment", headers:{Accept:'application/json'}, data:allParams,
                    error:moqui.handleAjaxError, success:function(resp) {
                        self.obj_delete_comment = {};
                        self.is_delete_comment = false;
                        self.fetchPageComments();
                    }
                });
            }
        },
        editComment (comment) {
            let self = this;
            self.obj_edit_comment=comment;
            if (document.querySelector('.edit_comment_section .ck-editor__editable')) {
                document.querySelector('.edit_comment_section .ck-editor__editable').ckeditorInstance.destroy();
            }
            setTimeout( () => {
                self.initializeEditor("#editCommentEditor");
            }, 300 );
        },
        updateComment() {
            var self = this;
            const params = new Proxy(new URLSearchParams(window.location.search), {
              get: (searchParams, prop) => searchParams.get(prop),
            });
            if (params.wikiSpaceId) {
                var allParams = $.extend({ wikiPageId: self.wiki_page_info.wikiPageId,
                 body: window.edit_comment_editor.getData(),communicationEventId:self.obj_edit_comment.communicationEventId,moquiSessionToken:$("#confMoquiSessionToken").val()}, {});
                $.ajax({ type:'POST', dataType:'json', url: "/rest/s1/wm/updateWikiPageComment", headers:{Accept:'application/json'}, data:allParams,
                    error:moqui.handleAjaxError, success:function(resp) {
                        self.obj_edit_comment = {};
                        self.fetchPageComments();
                        window.edit_comment_editor.setData("");
                    }
                });
            }
        },
        showDiffBetweenVersions(versionNameLhs, versionNameRhs) {
            let self = this;
            self.versionNameLhs = versionNameLhs;
            self.versionNameRhs = versionNameRhs;
            self.compare_model = true;
            const params = new Proxy(new URLSearchParams(window.location.search), {
              get: (searchParams, prop) => searchParams.get(prop),
            });
            if (params.wikiSpaceId) {
                var allParams = $.extend({ wikiSpaceId:params.wikiSpaceId,pagePath: self.page_path,
                versionNameLhs: versionNameLhs, versionNameRhs: versionNameRhs,
                moquiSessionToken:self.$root.moquiSessionToken }, {});
                $.ajax({ type:'GET', dataType:'json', url: "/rest/s1/wm/getWikiCompare", headers:{Accept:'application/json'}, data:allParams,
                    error:moqui.handleAjaxError, success:function(resp) {
                        var a = resp.pageTextLhs;
                        var b = resp.pageTextRhs;
                        var result = document.getElementById('result');
                        var diff = window.JsDiff.diffChars(a, b);
                        var fragment = document.createDocumentFragment();
                        for (var i=0; i < diff.length; i++) {
                            if (diff[i].added && diff[i + 1] && diff[i + 1].removed) {
                                var swap = diff[i];
                                diff[i] = diff[i + 1];
                                diff[i + 1] = swap;
                            }
                            var node;
                            if (diff[i].removed) {
                                node = document.createElement('del');
                                node.appendChild(document.createTextNode(diff[i].value));
                            } else if (diff[i].added) {
                                node = document.createElement('ins');
                                node.appendChild(document.createTextNode(diff[i].value));
                            } else {
                                node = document.createTextNode(diff[i].value);
                            }
                            fragment.appendChild(node);
                        }

                        result.textContent = '';
                        result.appendChild(fragment);
                    }
                });
            }
            setTimeout( () => {

            }, 1000 );
        },
        openEditModal(item){
            let self = this;
            self.md_conv = new showdown.Converter({metadata: true});
            self.show_edit_model = true;
            self.obj_edit = item;
            if (self.tree_nodes_selected) {
                let matched_seq = self.tree_master_list.find(function(item){
                    return item.pagePath === self.tree_nodes_selected;
                });
                if (matched_seq) {
                    self.obj_edit["sequence"] = matched_seq["sequenceNum"];
                }
                else {
                    self.obj_edit["sequence"] = "";
                }
            }
            else {
                let seq_match = self.tree_master_list.find(function(item){
                    return Object.keys(item).indexOf('pagePath') === -1;
                });
                if (seq_match) {
                    self.obj_edit["sequence"] = seq_match["sequenceNum"];
                }
                else {
                    self.obj_edit["sequence"] = "";
                }
            }
        },
        openAddPageMain() {
            let self = this;
            self.show_add_model_partial = false;
            self.openAddModal({pageText: null});
        },
        openAddModal(item){
            let self = this;
            self.md_conv = new showdown.Converter({metadata: true});
            self.show_add_model = true;
            self.obj_edit = item;
        },
        initializeEditor(elem) {
            let self = this;
            if (document.querySelector('.edit_page .ck-editor__editable')) {
                document.querySelector('.edit_page .ck-editor__editable').ckeditorInstance.destroy();
            }
            if (document.querySelector('.edit_comment_section .ck-editor__editable')) {
                document.querySelector('.edit_comment_section .ck-editor__editable').ckeditorInstance.destroy();
                self.obj_edit_comment={};
            }
            if (document.querySelector('.add_comment_sec .ck-editor__editable')) {
                document.querySelector('.add_comment_sec .ck-editor__editable').ckeditorInstance.destroy();
            }
            if (document.querySelector('.add_page_cls .ck-editor__editable')) {
                document.querySelector('.add_page_cls .ck-editor__editable').ckeditorInstance.destroy();
            }
            setTimeout( () => {
                InlineEditor
                .create( document.querySelector( elem ), {})
                .then( editor => {
                 if (elem === "#editEditor"){
                     window.edit_editor = editor;
                     if (self.wiki_page_info.wikiType == 'html' && self.obj_edit.pageText){
                        let turndownService = window.TurndownService();
                        editor.setData(turndownService.turndown(self.obj_edit.pageText));
                     }
                     else if (self.wiki_page_info.wikiType == 'md' && self.obj_edit.pageText){
                        editor.setData(self.getHtmlForMD(self.obj_edit.pageText));
                     }
                     else {
                        editor.setData("");
                     }
                    $("#edit_editor_id").find('.q-dialog__inner').removeAttr('tabindex');
                 }
                 else if (elem === "#addPageCommentEditor"){
                    window.add_comment_editor = editor;
                    $("#add_page_comment_id").find('.q-dialog__inner').removeAttr('tabindex');
                 }
                 else if (elem === "#editCommentEditor"){
                      window.edit_comment_editor = editor;
                      $("#edit_comment_id").find('.q-dialog__inner').removeAttr('tabindex');
                      if (self.obj_edit_comment.body){
                         editor.setData(self.obj_edit_comment.body);
                      }
                      else {
                         editor.setData("");
                      }
                  }
                 else {
                    window.add_editor = editor;
                    $("#add_editor_id").find('.q-dialog__inner').removeAttr('tabindex');
                 }
             } )
         }, 300 );
        },
        addPage() {
